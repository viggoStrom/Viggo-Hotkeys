^q::{
    A_Clipboard := ""
    Send "^c"
    if !ClipWait(1) {
        return
    } else {
        clipboard := StrReplace(A_Clipboard, A_Space, "+")
        clipboard := StrReplace(clipboard, A_Tab, "+")
        ; url := "https://www.google.se/search?q=" . clipboard
        url := "https://duckduckgo.com/?t=ffab&q=" . clipboard

        Run "C:\Program Files\Mozilla Firefox\firefox.exe " . url

        if WinWait("firefox", "", 1) {
            WinActivate
        }
    }
    Return
}
